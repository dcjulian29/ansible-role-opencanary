---
extends: default

rules:
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
  brackets:
    min-spaces-inside: 1
    max-spaces-inside: 1
    level: error
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  indentation:
    spaces: 2
    indent-sequences: true
  line-length:
    max: 125
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
